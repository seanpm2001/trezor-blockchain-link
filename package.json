{
  "name": "trezor-blockchain-link",
  "version": "0.0.11",
  "author": "Trezor <info@trezor.io>",
  "homepage": "https://github.com/trezor/trezor-blockchain-link",
  "description": "High-level javascript interface for blockchain communication",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "git://github.com/trezor/trezor-blockchain-link.git"
  },
  "bugs": {
    "url": "https://github.com/trezor/trezor-blockchain-link/issues"
  },
  "keywords": [
    "Trezor",
    "blockchain",
    "blockbook",
    "javascript"
  ],
  "main": "index.ts",
  "browser": {
    "ws": "./lib/utils/ws.ts"
  },
  "scripts": {
    "dev": "npx webpack-dev-server --config ./webpack/dev.babel.ts --mode development",
    "build:lib": "babel-node ./scripts/build.lib.ts --extensions '.ts' --source-maps inline",
    "build:workers": "babel-node ./scripts/build.workers.ts --extensions '.ts' --source-maps inline",
    "lint": "npx eslint ./src ./webpack",
    "flow": "flow check ./src",
    "test": "mocha --opts ./tests/mocha.opts ./tests/index.ts",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/runtime": "^7.3.4",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "babel-collect-imports": "^1.1.0",
    "babel-loader": "^8.0.5",
    "bignumber.js": "^8.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "es6-promise": "^4.2.5",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-flowtype": "^3.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.0",
    "flow-bin": "^0.83.0",
    "flow-webpack-plugin": "^1.2.0",
    "fs-extra": "^7.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^5.2.0",
    "prettier": "^1.16.4",
    "ripple-lib": "^1.0.2",
    "tiny-worker": "^2.1.2",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "worker-loader": "^2.0.0",
    "ws": "^6.1.2"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/fs-extra": "^5.0.5",
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/webpack": "^4.4.25",
    "bignumber.js": "^8.0.1",
    "es6-promise": "^4.2.5",
    "events": "^3.0.0",
    "ripple-lib": "^1.0.2",
    "tiny-worker": "^2.1.2",
    "typescript": "^3.3.3333",
    "ws": "^6.1.2"
  }
}
