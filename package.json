{
  "name": "trezor-blockchain-link",
  "version": "0.0.12",
  "author": "Trezor <info@trezor.io>",
  "homepage": "https://github.com/trezor/trezor-blockchain-link",
  "description": "High-level javascript interface for blockchain communication",
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "git://github.com/trezor/trezor-blockchain-link.git"
  },
  "bugs": {
    "url": "https://github.com/trezor/trezor-blockchain-link/issues"
  },
  "keywords": [
    "Trezor",
    "blockchain",
    "blockbook",
    "javascript"
  ],
  "main": "index.js",
  "browser": {
    "ws": "./lib/utils/ws.js"
  },
  "scripts": {
    "dev": "npx webpack-dev-server --config ./webpack/dev.babel.js",
    "build": "rm -rf ./build && yarn build:lib && yarn build:workers && babel ./build/lib --out-dir ./build/lib",
    "build:lib": "babel-node ./scripts/build.lib.ts --extensions '.ts'",
    "build:prod": "rm -rf ./build && webpack --config ./webpack/prod.babel.js --extensions '.ts .js'",
    "build:workers": "webpack --config ./webpack/workers.babel.js --extensions '.ts .js'",
    "lint": "eslint . --ext .ts",
    "test": "mocha --opts ./tests/mocha.opts ./tests/index.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
